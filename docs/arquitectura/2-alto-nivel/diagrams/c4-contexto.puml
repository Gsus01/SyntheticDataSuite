@startuml c4_context
!include https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Context.puml

LAYOUT_WITH_LEGEND()

title Workflow Execution Platform - Context Diagram (C4 Level 1)

Person(researcher, "Researcher / Developer", "Designs visual workflow pipelines, uploads input datasets, executes workflows and monitors execution results")

System(platform, "Workflow Execution Platform", "Enables designing, executing and monitoring processing pipelines through a graph-based visual interface. Visual flows are translated into container-executable workflows.")

System_Ext(minio, "MinIO / S3 Storage", "S3-compatible object storage. Stores input/output artifacts and workflow manifests")
System_Ext(argo, "Argo Workflows", "Kubernetes-native workflow orchestration engine. Executes workflows as container DAGs")
System_Ext(kubernetes, "Kubernetes Cluster", "Container orchestration platform where workflow steps are deployed and executed as pods")
System_Ext(registry, "Container Registry", "Stores Docker images for workflow step containers (e.g., Docker Hub, private registry)")

Rel(researcher, platform, "Designs flows, uploads data, executes and monitors", "HTTPS")
Rel(platform, minio, "Stores and retrieves artifacts", "S3 API")
Rel(platform, argo, "Submits workflows, queries status/logs", "REST API")
Rel_D(argo, kubernetes, "Creates and manages pods", "K8s API")
Rel_L(argo, minio, "Reads/writes artifacts between steps", "S3 API")
Rel_R(kubernetes, registry, "Pulls container images", "Docker Registry API")

@enduml

