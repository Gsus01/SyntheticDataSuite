@startuml workflow_execution_flow
title Workflow Execution Flow

actor User as U
participant "Frontend" as F
participant "Backend" as B
participant "MinIO" as M
participant "Argo" as A

U -> F : Designs visual workflow
activate F
F -> B : POST /workflow/submit
activate B
B -> B : Translates graph to YAML
B -> M : Stores YAML manifest
B -> A : argo submit workflow.yaml
A --> B : workflowName
B --> F : 200 OK + workflowName
deactivate B
F --> U : Shows submission confirmation
deactivate F

loop Polling (until workflow completes)
    F -> B : GET /workflow/status
    activate B
    B -> A : GET /workflows/{name}
    A --> B : Current status
    B --> F : Status per node
    deactivate B
    F --> U : Updates UI with node states
end

@enduml