@startuml node_inspection_flow
title Node Inspection Flow

skinparam activity {
    BackgroundColor #e3f2fd
    BorderColor #1565c0
}

start
:User clicks on a node\nin the canvas;
:Node becomes selected\n(visual highlight);
:Inspector panel opens;

fork
    :Show node info\n(name, type, status);
fork again
    :Load parameter\ncontrols;
fork again
    :Show artifact\ninputs/outputs;
end fork

if (Node has configurable params?) then (yes)
    :User modifies\nparameter values;
    :Canvas state updated;
    :Workflow marked as\n"dirty" (needs recompile);
else (no)
    :Show read-only info;
endif

if (Node is input type?) then (yes)
    :Show file upload\ncontrol;
    if (User uploads file?) then (yes)
        :File sent to MinIO;
        :Node linked to\nuploaded artifact;
    endif
endif

stop

@enduml
