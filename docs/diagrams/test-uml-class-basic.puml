@startuml test_class_diagram
' Diagrama UML de clases básico para probar PlantUML
title Diagrama de Clases - Ejemplo Básico

skinparam classAttributeIconSize 0
skinparam monochrome false
skinparam shadowing true

package "Dominio" {
    abstract class Entidad {
        - id: UUID
        + getId(): UUID
    }

    class Usuario {
        - nombre: String
        - email: String
        - activo: boolean
        + activar(): void
        + desactivar(): void
    }

    class Flujo {
        - nombre: String
        - descripcion: String
        - nodos: List<Nodo>
        + agregarNodo(nodo: Nodo): void
        + eliminarNodo(nodo: Nodo): void
        + ejecutar(): ResultadoEjecucion
    }

    class Nodo {
        - tipo: TipoNodo
        - configuracion: Map<String, Object>
        + validar(): boolean
        + procesar(entrada: Datos): Datos
    }

    enum TipoNodo {
        ENTRADA
        PROCESO
        SALIDA
        DECISION
    }
}

Entidad <|-- Usuario
Entidad <|-- Flujo
Entidad <|-- Nodo

Flujo "1" *-- "0..*" Nodo : contiene
Usuario "1" -- "0..*" Flujo : crea

Nodo --> TipoNodo : tiene

note right of Flujo
  Un flujo representa un grafo
  acíclico dirigido (DAG) de nodos
  que se ejecutan secuencialmente.
end note

@enduml
